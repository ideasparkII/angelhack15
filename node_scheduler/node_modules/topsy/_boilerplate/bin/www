#!/bin/sh

###
# Server Bootstrap
###

set -e

# Server attributes
_APPNAME="{{ project }}"
_CMD="../node_modules/nodemon/bin/nodemon.js"
_BUILDDIR="build"
_SERVER="server.js"
_ENV="development"
_PORT=7000
_FLAGS=""

# Move to build directory
cd $_BUILDDIR

# Run server
DEBUG=$_APPNAME NODE_ENV=$_ENV PORT=$_PORT $_CMD $_FLAGS $_SERVER
