//- Mixins

mixin latoFont
  link(href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700',rel='stylesheet',type='text/css')

mixin cardoFont
  link(href='http://fonts.googleapis.com/css?family=Cardo:400,700',rel='stylesheet',type='text/css')

mixin enviro(name, env)
  script(type='text/javascript').
    (function(){
      var _l = window.localStorage,
        _key = "__#{name.toLowerCase()}__env",
        _env = "#{env}";
      if (_l) {
        _l.setItem(_key, (_env === 'development' ? 'local' : 'prod'));
      }
    })();
